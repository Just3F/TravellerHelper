@{
    ViewData["Title"] = "Home Page";
}

@section Scripts{
    <script src="~/js/home/flight-table.js" type="text/javascript"></script>
    <script src="~/js/home/home-base.js" type="text/javascript"></script>
}

<div class="row">
    <div class="col-xl-12">
        <div class="m-portlet">
            <div class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">
                <div class="m-portlet__body">
                    <div class="form-group m-form__group row">
                        <div class="col-lg-4">
                            <label>
                                From
                            </label>
                            <select class="form-control" id="select_from">
                                <option>Minsk</option>
                                <option>Grodno</option>
                                <option>Vitebsk</option>
                                <option>Gomel</option>
                            </select>
                            <span class="m-form__help">
                                Please enter your full name
                            </span>
                        </div>
                        <div class="col-lg-4">
                            <label>
                                To
                            </label>
                            <select class="form-control" id="select_to">
                                <option>Minsk</option>
                                <option>Grodno</option>
                                <option>Vitebsk</option>
                                <option>Gomel</option>
                            </select>
                            <span class="m-form__help">
                                Please enter your email
                            </span>
                        </div>
                        <div class="col-lg-4">
                            <label>
                                Date
                            </label>
                            <div class="input-group date" id="date_of_travel">
                                <input type="text" class="form-control" readonly="" name="datetime" placeholder="Select date &amp; time">
                                <span class="input-group-addon">
                                    <i class="la la-calendar-check-o glyphicon-th"></i>
                                </span>
                            </div>
                            <span class="m-form__help">
                                Please enter your username
                            </span>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <div class="col-lg-12">
                            <button type="button" class="btn btn-success m-btn m-btn--icon float-right" id="search_btn">
                                <span>
                                    <i class="la la-search"></i>
                                    <span>
                                        Search
                                    </span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="m-portlet__body" id="flight_table_container">
                <table class="table table-striped table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th>From</th>
                            <th>To</th>
                            <th>Places</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>