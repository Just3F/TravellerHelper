@model TravellerHelper.ViewModels.FlightViewModel

@{
    ViewData["Title"] = "Home Page";
}

@section Scripts{
    <script src="~/js/admin/flight/flight-edit-base.js" type="text/javascript"></script>
}

<div class="m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <span class="m-portlet__head-icon m--hide">
                    <i class="la la-gear"></i>
                </span>
                <h3 class="m-portlet__head-text">
                    Edit Flight
                </h3>
            </div>
        </div>
    </div>
    <!--begin::Form-->
    <form class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" method="post" asp-action="Flight" asp-controller="Admin">
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <div class="col-lg-3" id="place_from_box">
                    <label>
                        Place From
                    </label>
                    <div class="input-group m-input-group m-input-group--square">
                        <span class="input-group-addon">
                            <i class="la la-map-marker"></i>
                        </span>
                        <select class="form-control" asp-for="CityFromId">
                            <option value="1">Minsk</option>
                            <option value="2">Grodno</option>
                            <option>Vitebsk</option>
                            <option>Gomel</option>
                        </select>
                    </div>
                    <span class="m-form__help">
                        Please enter your username
                    </span>
                </div>
                <div class="col-lg-3" id="place_to_box">
                    <label>
                        Place To
                    </label>
                    <div class="input-group m-input-group m-input-group--square">
                        <span class="input-group-addon">
                            <i class="la la-map-marker"></i>
                        </span>
                        <select class="form-control">
                            <option>Minsk</option>
                            <option>Grodno</option>
                            <option>Vitebsk</option>
                            <option>Gomel</option>
                        </select>
                    </div>
                    <span class="m-form__help">
                        Please enter your username
                    </span>
                </div>
                <div class="col-lg-3" id="time_from_box">
                    <label>
                        Time From
                    </label>
                    <div class="input-group m-input-group m-input-group--square">
                        <span class="input-group-addon">
                            <i class="la la-calendar-check-o glyphicon-th"></i>
                        </span>
                        <input class="form-control" />
                    </div>
                    <span class="m-form__help">
                        Please enter your username
                    </span>
                </div>
                <div class="col-lg-3" id="time_to_box">
                    <label>
                        Time To
                    </label>
                    <div class="input-group m-input-group m-input-group--square">
                        <span class="input-group-addon">
                            <i class="la la-calendar-check-o glyphicon-th"></i>
                        </span>
                        <input type="text" class="form-control">
                    </div>
                    <span class="m-form__help">
                        Please enter your username
                    </span>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-3" id="price_box">
                    <label class="">
                        Price
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            RUB
                        </span>
                        <input type="text" class="form-control" placeholder="">
                    </div>
                    <span class="m-form__help">
                        Please enter your contact
                    </span>
                </div>
                <div class="col-lg-1" id="seats_limit_box">
                    <label class="">
                        Seats
                    </label>
                    <div class="m-input-icon">
                        <input type="text" class="form-control">
                    </div>
                    <span class="m-form__help">
                        Please enter fax
                    </span>
                </div>

            </div>
        </div>
        <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid">
                <div class="row">
                    <div class="mx-auto">
                        <button type="submit" class="btn btn-primary">
                            Create
                        </button>
                        @*<button type="reset" class="btn btn-secondary">
                                Cancel
                            </button>*@
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!--end::Form-->
</div>